<div>
    <h1>Chat</h1>
    <div id="chat">
        <div id="messages"></div>
        <form id="message-form">
            <input name="message" type="text" placeholder="Message" autofocus />
            <button>Send</button>
        </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Conectar al servidor de Socket.IO
        const socket = io()

        // Manejar el evento de conexión exitosa
        socket.on('connect', () => {
            console.log('Connected to the server - Client')
        })
        // Manejar el evento de desconexión
        socket.on('disconnect', () => {
            console.log('Disconnected from the server - Client')
        })
    </script>
</div>
