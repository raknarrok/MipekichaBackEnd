<div>

    <h1>HOME</h1>
    <h1> Hola {{ user.name }} que gusto verte</h1>
    <div>
        Product List:
        <table border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>price</th>
                    <th>thumbnails</th>
                    <th>code</th>
                    <th>stock</th>
                    <th>category</th>
                    <th>statusItem</th>
                </tr>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.thumbnails}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.statusItem}}</td>
                </tr>
                {{/each}}
            </tbody>
            </thead>
        </table>
    </div>

    <!-- Form to add a new product This is the way to add another template -->
    {{> productForm}}

    {{#if isAdmin}}
        <p> Si tienes permisos </p>
        {{else}}
        <p>No tienes permisos</p>
    {{/if}}
</div>